{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {label: 'Nom d\'utilisateur'}) }}
        {{ form_row(registrationForm.email, {label: 'Adresse email'}) }}
        {{ form_row(registrationForm.password, {label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.confirm_password, {label: 'Confirmer le mot de passe'}) }}

        <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(registrationForm) }}
{% endblock %}
